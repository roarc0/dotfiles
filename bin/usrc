#!/usr/bin/env bash
. "$ENV_HOME"/scripts/functions.sh

update() {
  if [ -d ".git" ]; then
    echoc 31 "git repo found"
    git pull
  fi
  cd ..
}

opt_update() {
  param=${1}
  echo $param
  if [ -d "$param" ]; then
    echoc 31 "updating $param\n"
  else
    echoc 31 "Directory \"$param\" not found"
    exit 1
  fi

  cd "$param" || exit
  echoc 31 "Directories found: "
  ls -d */
  echoc 31 "\nUpdating...\n"
  dlist=$(ls -d */)

  for dir in $dlist; do
    if [[ "${dir}" != "linux/" ]]; then
      echoc 32 "--------------------------------"
      echoc 32 ">> $dir"
      cd "$dir" || exit
      if [ -d "src" ]; then
        cd "src" || exit
        update
      fi
      update
    fi
  done
  cd - >/dev/null || exit
}

opt_update "$1"
