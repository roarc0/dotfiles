#!/usr/bin/env bash

cargo_install() {
  printf "\033[31mInstalling %s\033[0m\n" "$1"
  if ! cargo install "$1"; then
    echo "Failed to install $1"
  fi
}

packages=(
  cargo-modules
  cargo-wgsl
  sccache
  tokei
  du-dust
  fd-find
  ripgrep
  ytop
  bandwhich
  delta
  procs
  eza
  mdbook
  mdbook-pdf
  alacritty
)
#cargo_install deno --locked
#cargo_install exa
#cargo_install bat

for package in "${packages[@]}"; do
  cargo_install "$package"
done
