#!/usr/bin/env sh

FZF_VERSION="0.52.1"
ARCH="linux_amd64"
FZF_URL="https://github.com/junegunn/fzf/releases/download/$FZF_VERSION/fzf-$FZF_VERSION-$ARCH.tar.gz"
INSTALL_DIR="$HOME/.local/bin"

TEMP_DIR=$(mktemp -d)

mkdir -p "$INSTALL_DIR"

curl -s -L "$FZF_URL" -o "$TEMP_DIR/fzf.tar.gz"
tar -xzf "$TEMP_DIR/fzf.tar.gz" -C "$TEMP_DIR"
mv "$TEMP_DIR/fzf" "$INSTALL_DIR/fzf"
rm -rf "$TEMP_DIR"

echo "fzf $FZF_VERSION installed successfully in $INSTALL_DIR"
fzf --version
